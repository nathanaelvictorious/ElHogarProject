<div class="container-md mt-3 d-flex justify-content-center">
  <div class="col-md-7 ">
    <div class="card mt-5">
      <div class="card-body">
      
        <div class="d-flex d-inline p-2 justify-content-center user-select-none"> 
          <h2 class="pr-2 text-warning"><b>El</b></h2>
          <h2><b>Hogar</b></h2>
        </div>
        
        <h1 class="card-title text-center user-select-none">Admin Login</h1>

        <h5 class="card-subtitle mb-2 text-muted text-center user-select-none">
          Use your credentials to access this system.
        </h5>
        <%- include ("partials/messages"); %>
        <br />
        <form action="/users/login" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block mt-4 mb-3">Login</button>
        </form>
        <!-- <p class="lead mt-4">
          No Account? <a href="/users/register">Register</a>
        </p> -->
      </div>
    </div>
  </div>
</div>